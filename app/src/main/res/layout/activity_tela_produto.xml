<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaProduto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="15px"
                    android:textSize="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar Produto"
                    android:layout_gravity="center"/>
                <Spinner
                    android:layout_marginTop="15px"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="100px"
                    android:id="@+id/spNomeProduto">
                </Spinner>

                <Spinner
                    android:layout_marginTop="30px"
                    android:layout_width="300dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="100px"
                    android:id="@+id/spNomeFilho">
                </Spinner>

                <TextView
                    android:layout_marginTop="100px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detalhe do Produto"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/etDetalhe"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantidade de Pacotes"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/etQuantidade"
                    android:layout_width="330dp"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantidade"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/etQuantidadePacotes"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="number"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PreÃ§o"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/etPreco"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:layout_gravity="center"/>

                <TextView
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Data"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/etData"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="date"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_marginTop="15px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Local da Compra"
                    android:layout_gravity="center"/>

                <EditText
                    android:id="@+id/etLocalCompra"
                    android:layout_width="330dp"
                    android:layout_height="50dp"
                    android:ems="10"
                    android:inputType="text"
                    android:layout_gravity="center"/>
                <Button
                    android:id="@+id/btnCadastrarProduto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cadastrar"
                    android:layout_gravity="center"/>
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>